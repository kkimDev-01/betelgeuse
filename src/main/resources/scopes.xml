<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="personSingleton" class="com.example.betelgeuse.BeanScopeExample.Person" scope="singleton"/>

    <bean id="personPrototype" class="com.example.betelgeuse.BeanScopeExample.Person" scope="prototype"/>

    <bean id="requestScopedBean" class="com.example.betelgeuse.BeanScopeExample.HelloMessageGenerator" scope="request"/>


</beans>